<div class="col-sm-2">
  <%= image_tag(espn_image_for(team), class: "img-fluid", size: "45") %>
</div>
<div class="col-sm-10">
  <div class="row">
    <%= team.name %>
  </div>
  <div class="row">
    <span class="game-record"><%= "(#{team.wins}-#{team.losses}" %></span>
    <% if team.ties != 0 && team.ties.present? %>
      <span class="game-record"><%= "-#{team.ties})" %></span>
    <% elsif team.overtime_losses !=0 && team.overtime_losses.present? %>
      <span class="game-record"><%= "-#{team.overtime_losses})" %></span>
    <% else %>
      <span class="game-record"><%= ")" %></span>
    <% end %>
  </div>
</div>