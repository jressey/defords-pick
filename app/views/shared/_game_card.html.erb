<div class="card game-card">
  <div class="card-block">
    <div class="game-card-title">
      <% if game.nil? %>
        <%= "No #{sport} Games Scheduled #{timeframe}" %>
    </div>
      <% else %>
        <div class="row">
          <div class="col-sm-6">
            <%= "#{sport} #{timeframe}:" %>
          </div>
          <div class="col-sm-6 game-time">
            <%= pretty_time(in_eastern(game.start_time)) %>
          </div>
        </div>
    </div>
        <%= render partial: "shared/game", locals: { game: game } %>
      <% end %>
  </div>
</div>